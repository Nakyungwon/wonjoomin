    $(document).ready(function(){
        var del_upt_flg = '';

        /*댓글 세팅*/
        initComment();

        /*이미지 크기조정*/
        for(var k = 0 ; k < $('#board_content img').length ; k ++){
            $('#board_content img').eq(k).css('max-width','100%');
