        /********************************** 메인글 ******************************************/
        //추천 누를시
        $(document).on("click",'.up-onejumin',function(){
            upAndDownContent('G');
        })

        //반대 누를시
        $(document).on("click",'.down-onejumin',function(){
            var logYn = '<%= user_info %>'
            if(!isValid2(logYn)){
                if(confirm('로그인이 필요한 서비스 입니다. 로그인하시겠습니까?')){
